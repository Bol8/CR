@model IEnumerable<CR.Entities.BaseFieldsTemplate>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MandatoryField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AliasField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FieldValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseFieldType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseType.NameContractType)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MandatoryField)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AliasField)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseFieldType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseType.NameContractType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.idContractFieldTemplate }) |
                @Html.ActionLink("Details", "Details", new { id=item.idContractFieldTemplate }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.idContractFieldTemplate })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
